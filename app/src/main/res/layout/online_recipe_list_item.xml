<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_iv_1"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/item_margin"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/pic_placeholder"
                android:contentDescription="@string/recipe_image"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/list_iv_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/item_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pic_placeholder"
                    android:contentDescription="@string/recipe_image"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/list_iv_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/item_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pic_placeholder"
                    android:contentDescription="@string/recipe_image"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/list_iv_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/item_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pic_placeholder"
                    android:contentDescription="@string/recipe_image"
                    android:scaleType="fitCenter" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/od_list_title_tv"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.4"
                    android:ellipsize="end"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/theme_primary"
                    tools:text="@string/title_text" />

                <TextView
                    android:id="@+id/od_list_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.9"
                    android:textColor="@color/theme_primary"
                    tools:text="@string/added_by_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_padding"
                android:paddingLeft="@dimen/item_margin"
                android:paddingRight="@dimen/item_margin">

                <TextView
                    android:id="@+id/od_list_category_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.4"
                    android:ellipsize="end"
                    tools:text="@string/category_text" />

                <TextView
                    android:id="@+id/od_list_servings_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.9"
                    android:ellipsize="end"
                    tools:text="@string/servings_txt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/od_prep_time_tv_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/prep_time_txt"
                    android:textAppearance="?android:textAppearanceSmall" />
                <TextView
                    android:id="@+id/od_prep_time_tv_int"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    tools:text="@string/sample_time" />

                <TextView
                    android:id="@+id/od_yeild_time_tv_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/yeild_time_tv_single"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/od_yeild_time_tv_int"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    tools:text="@string/sample_time" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/od_cook_time_tv_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/cook_time_tv"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/od_cook_time_tv_int"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    tools:text="@string/sample_time" />

                <TextView
                    android:id="@+id/od_list_total_time_tv_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/total_time_tv"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/od_list_total_time_tv_int"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    tools:text="@string/sample_time" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginEnd="@dimen/item_margin"
            android:layout_marginBottom="@dimen/item_margin"
            android:layout_marginTop="@dimen/listview_margin"
            android:background="@drawable/layout_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredient_tv"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginTop="@dimen/item_padding"
                android:textAppearance="?android:textAppearanceMedium" />

            <ListView
                android:id="@+id/od_ingredient_lv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:foregroundGravity="center"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginBottom="@dimen/item_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/listview_margin"
            android:layout_marginBottom="@dimen/listview_margin"
            android:background="@color/theme_primary_dark" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginEnd="@dimen/item_margin"
            android:layout_marginBottom="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@drawable/layout_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginTop="@dimen/item_padding"
                android:text="@string/direction_tv"
                android:textAppearance="?android:textAppearanceMedium" />

            <ListView
                android:id="@+id/od_steps_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginBottom="@dimen/item_margin"
                 />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>